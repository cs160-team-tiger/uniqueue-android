<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/less_padding"
    android:layout_marginHorizontal="@dimen/common_padding"
    app:cardCornerRadius="4dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/less_padding"
        android:paddingVertical="@dimen/common_padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1"
                android:textColor="#3B7EA1"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/text_inProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#859438" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/student_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/less_padding"
                android:layout_weight="1"
                android:text="James"
                android:textColor="#0C0102"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/text_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/less_padding"
                android:ellipsize="none"
                android:text="Question 6: Pretty confused what to put into the &quot;having&quot; clause. Why doesn't abs(location) > 2? Why doesn't abs(location) > 2? Why doesn't abs(location) > 2?"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_question_attachment"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
